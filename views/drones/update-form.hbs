<h2>Update the drone {{name}}</h2>

<form action="/drones/{{id}}/edit" method="post">
 
  <label for="name-input">Name:</label>
  <input type="text" name="name" id="name-input" value="{{name}}" />
 
  <label for="propellers-input">Amount of propellers:</label>
  <input type="number" name="propellers" id="propellers-input" value="{{propellers}}" />
 
  <label for="speed-input">Max speed:</label>
  <input type="number" name="speed" id="speed-input" value="{{maxSpeed}}"/>
  
  <button type="submit">Update</button>
 
</form>